= render 'layouts/side_bar'

.col-sm-9.user-posts
  = link_to "Keep writing", root_path, class: "keep-writing pull-right"
  - unless @profile.current_users_profile?
    = link_to "&#10094; back to my profile".html_safe, profile_path, class: "back-main"
  %h1.title
    Posts
  - @profile.posts.each do |post|
    = render partial: "posts/post", locals: { post: post }

  - unless @profile.posts.empty?
    = will_paginate @profile.posts
