- if @post_today.present?
  .word-count
    0
    %span.wordz.hidden
      words

  .saved
    Saved
    = @post_today.updated_at.strftime("%l:%M:%S%P")

  = form_for @post_today, url: post_path(@post_today), method: :patch do |f|
    .close
      = f.submit "X"

    .save-exit.hidden Save and exit

    %article.writing-area
      = f.text_area :content, class: "col-sm-6", id: "writing-textarea", autofocus: "autofocus", spellcheck: "false"
- else
  %section.center
    %section.writing-prompt-section
      %h2 Today's prompt:
      %p.writing-prompt
        = Prompt.today.content
    = link_to "Start Writing", posts_path, class: "start-writing col-sm-4", method: :post
    = link_to "Profile", profile_path, class: "button-light"
