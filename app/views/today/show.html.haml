- if @post_today.present?
  .word-count
    0
    %span.wordz.hidden
      words

  .saved
    Saved
    = @post_today.updated_at.strftime("%l:%M:%S%P")

  = form_for @post_today, url: post_path(@post_today), method: :patch do |f|
    .close
      = f.submit "X"

    .save-exit.hidden Save and exit

    %article.writing-area
      = f.text_area :content, class: "col-sm-6", id: "writing-textarea"#, { autofocus: "autofocus", spellcheck: "false" }
- else
  .top-left
    = link_to "Profile", profile_path, class: "write-button"
    = link_to "Archive", archive_index_path, class: "archive-profile-link"

  .top-right
    = link_to "Log out", logout_path, class: "logout", method: :post

  = link_to "Start writing", posts_path, class: "start-writing col-lg-6 col-lg-offset-3", method: :post
