<style>
  .greeting {
    margin-bottom: 20px;
  }

  .body {
    margin-bottom: 20px;
  }
</style>

<div class="greeting">
  Hi <%= @post.user.username %>,
</div>

<div class="body">
  <p>Your <%= link_to "post", @post_url %> from <%= @post.date(without_year: true) %> has received a comment from <%= @comment_user.username %></p>

  <p>"<%= @comment.content %>"</p>
</div>
